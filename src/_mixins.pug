mixin header(title)
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        link(rel='icon' href='images/icon-html.svg')
        link(rel='stylesheet' href='style.css')
        title= title
        script(src="https://cdnjs.cloudflare.com/ajax/libs/core-js/3.21.1/minified.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/classlist/1.2.20171210/classList.min.js")
        script(src='scripts/themeToggle.js' defer)
        block
mixin links
    br
    nav.links
        each val, key in pages
            a(
            href = key + ext
            id = filename.endsWith(key + ext) ? "current" : null
            ) #{val}
    br
mixin page
    .flex-side
    main.page
        block
    .flex-side
